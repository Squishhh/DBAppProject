<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs304.referendum.functionalities.nestedAggregationActivity"
    tools:showIn="@layout/activity_nested_aggregation">

    <EditText
        android:id="@+id/query_nested_agg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Count/Max/Min/Avg"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/results_text_nested_agg"
        android:layout_width="267dp"
        android:layout_height="200dp"
        android:layout_below="@+id/submit_button_selection"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Results Here"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Results"
        app:layout_constraintHorizontal_bias="0.504" />

    <Button
        android:id="@+id/submit_button_nested_agg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/query_selection"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Find"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Submit"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/query_nested_agg"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/results_text_selection"
        app:layout_constraintVertical_bias="0.376" />

</android.support.constraint.ConstraintLayout>
